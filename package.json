{
  "author": "John D. Jameson",
  "homepage": "https://type-specimens.io/",
  "license": "UNLICENSED",
  "name": "type-specimens",
  "private": true,
  "repository": "johndjameson/type-specimens",
  "version": "0.1.0",
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "clean-css": "^3.4.18",
    "eslint": "^3.0.1",
    "eslint-plugin-react": "^5.2.2",
    "node-sass": "^3.8.0",
    "onchange": "^2.5.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.2",
    "react": "^15.2.0",
    "react-dom": "^15.2.0",
    "react-router": "^2.5.2",
    "uglify-js": "^2.7.0"
  },
  "scripts": {
    "autoprefixer": "postcss --use autoprefixer --replace build/stylesheets/**/*",
    "build": "npm run scaffold && npm run html && npm run sass && npm run javascript && npm run images",
    "build:production": "npm run clean && npm run scaffold && npm run html && npm run sass && npm run javascript:production && npm run images && npm run minify:css && npm run minify:javascript",
    "clean": "rm -rf build/",
    "develop": "parallelshell 'npm start' 'npm run watch:sass' 'npm run watch:javascript'",
    "html": "cp source/index.html build/",
    "images": "cp -rf source/images build/",
    "javascript": "browserify --transform [babelify] source/javascripts/main.jsx > .application.temp.js && mv .application.temp.js build/javascripts/application.js",
    "javascript:production": "NODE_ENV=production browserify --transform [babelify] source/javascripts/main.jsx > .application.temp.js && mv .application.temp.js build/javascripts/application.js",
    "lint": "eslint source/javascripts/ --ext .js,.jsx",
    "lint:fix": "eslint source/javascripts/ --ext .js,.jsx --fix",
    "minify:css": "cleancss -o build/stylesheets/application.css build/stylesheets/application.css --skip-advanced",
    "minify:javascript": "uglifyjs build/javascripts/application.js --compress --mangle --output build/javascripts/application.js",
    "sass": "node-sass source/stylesheets/ --output build/stylesheets/",
    "scaffold": "mkdir -p build/stylesheets/ build/javascripts/ build/images/",
    "serve": "browser-sync start --server 'build/' --files 'build/**/*'",
    "start": "npm run build && npm run serve",
    "watch:javascript": "onchange 'source/javascripts/**/*' -v -- npm run javascript",
    "watch:sass": "onchange 'source/stylesheets/**/*' -v -- npm run sass"
  }
}
